{
  "compilerOptions": {
  "target": "ES6",
  "module": "CommonJS",
  "strict": true,
  "esModuleInterop": true,
  "forceConsistentCasingInFileNames": true,
  "skipLibCheck": true,
  "outDir": "dist",
  "rootDir": "./",
  "baseUrl": "./", 
  "paths": {
    "@controllers/*": ["src/controllers/*"], 
    "@services/*": ["src/services/*"],   
    "@routes/*": ["src/routes/*"],      
    "@models/*": ["src/models/*"],      
    "@utils/*": ["src/utils/*"],        
    "@config/*": ["config/*"],    
    "@middlewares/*": ["src/middlewares/*"]             
  }
  },
  "include": ["src", "index.ts"], 
  "exclude": ["node_modules"]
  }